@model Bookstore_Group6.Models.BuyerBorrower

@{
    ViewBag.Title = "Sign Up Successful";
}

<h2>Sign Up Successful</h2>

<p>Thank you for signing up! Here are your details:</p>

<ul class="list-group">
    <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
    <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
    <li class="list-group-item"><strong>Address:</strong> @Model.Address</li>
    <li class="list-group-item"><strong>Client Type:</strong> @Model.ClientType</li>
    <li class="list-group-item"><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</li>
    <li class="list-group-item"><strong>Phone Number:</strong> @Model.PhoneNumber</li>
</ul>

<a href="@Url.Action("SignUp", "BuyerBorrower")" class="btn btn-primary">New Sign Up?</a>
<a href="@Url.Action("Login", "BuyerBorrower")" class="btn btn-primary">Login</a>

