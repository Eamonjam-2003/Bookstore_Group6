@model Tuple<List<Bookstore_Group6.Models.BuyerBorrower>, List<Bookstore_Group6.Models.Clients>>

@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<h3>Buyer & Borrowers</h3>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Client Type</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model.Item1)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.ClientType</td>
            <td>@user.Role</td>
            <td>
                @using (Html.BeginForm("DeleteBuyer", "Admin", FormMethod.Post))
                {
                    @Html.Hidden("id", user.Id)
                    <button class="btn btn-danger" type="submit">Delete</button>
                }
            </td>
        </tr>
    }
</table>

<h3>Clients</h3>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Actions</th>
    </tr>
    @foreach (var client in Model.Item2)
    {
        <tr>
            <td>@client.Name</td>
            <td>@client.Email</td>
            <td>@client.PhoneNumber</td>
            <td>@client.Address</td>
            <td>
                @using (Html.BeginForm("DeleteClient", "Admin", FormMethod.Post))
                {
                    @Html.Hidden("id", client.Id)
                    <button class="btn btn-danger" type="submit">Delete</button>
                }
            </td>
        </tr>
    }
</table>

