@model IEnumerable<Bookstore_Group6.Models.Transactions>

@{
    ViewBag.Title = "Transaction List";
}

<h2>Transaction List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>Book @Html.DisplayNameFor(model => model.Book.Name)</th>
        <th>Client @Html.DisplayNameFor(model => model.Client.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Date)</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Book.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Date)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

